<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="표시 관련 설정" >
        <src.comitton.config.MarginSeekbar
            android:dialogMessage="스크롤의 끝을 나타내는 여백 크기 선택"
            android:dialogTitle="여백 크기"
            android:key="Mergin"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="주위의 여백 크기" />
        <src.comitton.config.CenterSeekbar
            android:dialogMessage="원본 문서 나란히보기 이미지 사이의 여백의 폭을 설정"
            android:dialogTitle="중앙 여백 폭(나란히보기)"
            android:key="Center"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="중앙 여백 폭(나란히보기)" />
        <src.comitton.config.GradationSeekbar
            android:dialogMessage="並べて表示で画像間に描画する影の幅を設定"
            android:dialogTitle="중앙의 그림자 폭(나란히보기)"
            android:key="Gradation"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="중앙의 그림자 폭(나란히보기)" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="ImmEnable"
            android:summary="KitKat 이후 터미널에서 탐색 모음을 숨 깁니다"
            android:title="IMMERSIVE 모드를 활성화하려면" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="OldMenu"
            android:summary="싱글 액션에서 명령을 선택하는 메뉴"
            android:title="구 타입의 상단 메뉴" />
    </PreferenceCategory>
    <PreferenceCategory android:title="작업 관련 설정" >
        <src.comitton.config.EffectTimeSeekbar
            android:dialogMessage="페이지 넘김 때의 효과 시간"
            android:dialogTitle="효과 시간"
            android:key="EffectTime"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="효과 시간" />
        <src.comitton.config.ScrollSeekbar
            android:dialogMessage="드래그 대한 스크롤 양의 배율"
            android:dialogTitle="드래그하여 스크롤 량"
            android:key="Scroll"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="드래그하여 스크롤 량" />
        <src.comitton.config.ClickAreaSeekbar
            android:dialogMessage="상하 작업 영역의 크기를 지정"
            android:dialogTitle="아래의 작업 영역 크기"
            android:key="ClickAreaSp"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="아래의 작업 영역 크기" />
        <src.comitton.config.PageRangeSeekbar
            android:dialogMessage="하단 페이지 선택 영역에서 페이지 당 드래그 량"
            android:dialogTitle="페이지 선택의 감도"
            android:key="PageRangeSp"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="페이지 선택의 감도" />
        <src.comitton.config.TapRangeSeekbar
            android:dialogMessage="스크롤을 시작할 때까지의 이동량"
            android:dialogTitle="스크롤 시작 감도"
            android:key="TapRangeSp"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="스크롤 시작 감도" />
        <src.comitton.config.VolScrlSeekbar
            android:dialogMessage="볼륨 키와 소리 작업의 스크롤 속도"
            android:dialogTitle="스크롤 속도"
            android:key="VolScrlSp"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="볼륨 키로 스크롤 속도" />
        <src.comitton.config.MomentModeSeekbar
            android:dialogMessage="작을수록 빨리 멈추는"
            android:dialogTitle="감속 속도"
            android:key="MomentMode"
            android:negativeButtonText="@null"
            android:summary="dummy"
            android:title="감속 속도" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="BottomFile"
            android:summary="화면 하단의 작업 전후의 파일 이동을 가능하게하는"
            android:title="하단 작업 전후 파일 이동" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="PinchEnable"
            android:summary="핀치 / 아웃 작업 표시 크기를 변경합니다"
            android:title="핀치 / 아웃 작업" />
    </PreferenceCategory>
    <PreferenceCategory android:title="온라인 도움말" >
        <PreferenceScreen
            android:key="ImgTxtDtlHelp"
            android:summary="설정 항목에 대한 온라인 도움말을 ​​표시합니다"
            android:title="설정 항목에 대한 설명" >
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>