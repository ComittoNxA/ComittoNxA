<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="공통 설정" >
        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="문자 코드"
            android:entries="@array/charset_name_list"
            android:entryValues="@array/charset_value_list"
            android:key="Charset"
            android:summary="dummy"
            android:title="문자 코드" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="HiddenFile"
            android:summary="Mac OS X에서 생성 된 이상한 파일을 숨길 수 있습니다"
            android:title=". 로 시작하는 파일을 표시하지" />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="화면 회전 버튼"
            android:entries="@array/rotatebtn_name_list"
            android:entryValues="@array/rotatebtn_value_list"
            android:key="RotateBtn"
            android:summary="dummy"
            android:title="화면 회전 버튼" />
    </PreferenceCategory>
    <PreferenceCategory android:title="온라인 도움말" >
        <PreferenceScreen
            android:key="CommHelp"
            android:summary="설정 항목에 대한 온라인 도움말을 ​​표시합니다"
            android:title="설정 항목에 대한 설명" >
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
