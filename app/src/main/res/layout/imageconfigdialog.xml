<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/text_message"
			android:layout_width="320sp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="20sp"
			android:textColor="#FFFFFFFF"
			android:text="@string/imgConfMenu" />
	
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="1sp"
			android:background="#FFFFFFFF"
			android:layout_marginTop="6sp" />
	</LinearLayout>

	<ScrollView
		android:id="@+id/ScrollView"
		android:layout_width="320sp"
		android:layout_height="wrap_content"
		android:layout_weight="1" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="8dip"
			android:orientation="vertical" >
		
			<CheckBox
				android:id="@+id/chk_sharpen"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-6sp"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/sharpenMenu" />
	
			<CheckBox
				android:id="@+id/chk_gray"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-6sp"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/grayMenu" />
	
			<CheckBox
				android:id="@+id/chk_invert"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-6sp"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/invertMenu" />
	
			<CheckBox
				android:id="@+id/chk_coloring"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/coloringMenu" />
	
			<CheckBox
				android:id="@+id/chk_moire"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/moireMenu" />
	
			<CheckBox
				android:id="@+id/chk_topsingle"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="left|center"
				android:textSize="17sp"
				android:text= "@string/topsingleMenu" />
	
			<TextView
				android:id="@+id/label_bright"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:layout_gravity="left"
				android:text="@string/brightMenu" />
	
			<SeekBar
				android:id="@+id/seek_bright"
				style="@style/PageSeekBar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="4sp"
				android:paddingRight="4sp" />
	
			<TextView
				android:id="@+id/label_gamma"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:layout_gravity="left"
				android:text="@string/gammaMenu" />
	
			<SeekBar
				android:id="@+id/seek_gamma"
				style="@style/PageSeekBar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="4sp"
				android:paddingRight="4sp" />
	
			<TextView
				android:id="@+id/label_bklight"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:layout_gravity="left"
				android:text="@string/bklightMenu" />
	
			<SeekBar
				android:id="@+id/seek_bklight"
				style="@style/PageSeekBar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="4sp"
				android:paddingRight="4sp" />
	
			<TextView
				android:id="@+id/label_algomode"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:layout_gravity="left"
				android:text="@string/algoriMenu" />
	
			<Button
				android:id="@+id/btn_algomode"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="17sp" />
	
			<TextView
				android:id="@+id/label_spread"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:gravity="left"
				android:text="@string/tguide02" />
	
			<Button
				android:id="@+id/btn_spread"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="17sp" />
	
			<TextView
				android:id="@+id/label_scale"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:gravity="left"
				android:text="@string/tguide03" />
	
			<Button
				android:id="@+id/btn_scale"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="17sp" />
	
			<TextView
				android:id="@+id/label_mgncut"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10sp"
				android:layout_marginRight="10sp"
				android:gravity="left"
				android:text="@string/mgnCutMenu" />
	
			<Button
				android:id="@+id/btn_mgncut"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="17sp" />

		</LinearLayout>
	</ScrollView>
				
	<LinearLayout
		android:id="@+id/footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="vertical" >
    
		<CheckBox
			android:id="@+id/chk_save"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="left|center"
			android:textSize="17sp"
			android:text= "@string/idSaveConfig" />
	
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:orientation="horizontal" >
	
			<Button
				android:id="@+id/btn_revert"
				android:layout_width="100sp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="20sp"
				android:text="@string/btnRevert" />
	
			<Button
				android:id="@+id/btn_apply"
				android:layout_width="100sp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="20sp"
				android:text="@string/btnApply" />
	
			<Button
				android:id="@+id/btn_ok"
				android:layout_width="100sp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="20sp"
				android:text="@string/btnOK" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
